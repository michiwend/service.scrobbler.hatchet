<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.scrobbler.librefm" name="Libre.fm Scrobbler" version="0.0.2" provider-name="Team-XBMC">
	<requires>
		<import addon="xbmc.python" version="2.1.0"/>
	</requires>
	<extension point="xbmc.service" library="scrobbler.py" start="login">
	</extension>
	<extension point="xbmc.addon.metadata">	
		<language></language>
		<summary lang="en">Scrobble service for libre.fm</summary>
		<description lang="en">Scrobbler will submit info of the songs you've been listening to in XBMC to libre.fm</description>
		<platform>all</platform>
		<forum>http://forum.xbmc.org/showthread.php?tid=158540</forum>
		<source>https://code.google.com/p/ronie/source/</source>
	</extension>
</addon>
